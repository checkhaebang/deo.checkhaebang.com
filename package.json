{
  "name": "deo.checkhaebang.com",
  "version": "1.5.0",
  "description": "deo 체크해방 웹",
  "private": true,
  "author": "Mincheol Kim<nexters@kakao.com>",
  "scripts": {
    "start": "craco start",
    "start:dev": "craco build && serve -s build",
    "build": "craco build",
    "test:ci": "CI=true craco test",
    "eject": "react-scripts eject",
    "lint": "eslint './src/**/*.{ts,tsx,js,jsx}'",
    "lint:fix": "eslint --fix './src/**/*.{ts,tsx,js,jsx}'",
    "release": "standard-version",
    "version": "echo v$npm_package_version",
    "version:next": "node ./get-next-version.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^10.0.0",
    "@commitlint/config-conventional": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "husky": "^4.2.5",
    "standard-version": "^9.0.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@craco/craco": "^5.7.0",
    "@egjs/infinitegrid": "^3.6.3",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-lottie": "^1.2.5",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.6",
    "@types/react-router-redux": "^5.0.18",
    "craco-alias": "^2.1.1",
    "react": "^16.13.1",
    "react-app-polyfill": "^1.0.6",
    "react-dom": "^16.13.1",
    "react-lottie": "^1.2.3",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "react-router-redux": "^4.0.8",
    "react-scripts": "^3.4.4",
    "react-string-replace": "^0.4.4",
    "redux": "^4.0.5",
    "redux-observable": "^1.2.0",
    "rxjs": "^6.6.3",
    "tslib": "^2.0.3",
    "typesafe-actions": "5.1.0-1"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "skipCI": false,
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint && npm run build",
      "pre-push": "npm run lint"
    }
  }
}
